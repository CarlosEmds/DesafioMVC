@model IEnumerable<DesafioMVC.Models.Tarefa>
    @{
        ViewData["Title"] = "Listagem de Tarefas";
    }

    <h2>Tarefas</h2>
    <p>
        <a asp-action="Criar" class="btn btn-success">Nova Tarefa</a>
    </p>
    <p>
        <form asp-controller="Tarefa" asp-action="Index" method="get">
            <div class="form-group">
                <label for="searchAttribute">Buscar por:</label>
                <select class="form-control" id="searchAttribute" name="searchAttribute">
                    <option value="Id">Id</option>
                    <option value="Titulo">Título</option>
                    <option value="Descricao">Descrição</option>
                    <option value="Data">Data</option>
                    <option value="Status">Status</option>
                </select>
            </div>
            <div class="form-group">
                <label for="searchString">Valor da Busca:</label>
                <input type="text" class="form-control" id="searchString" name="searchString" placeholder="Digite o valor da busca">
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
    </p>
    <p>
        <form asp-controller="Tarefa" asp-action="Index" method="get">
            <div class="form-group">
                <label for="dateSearchString">Buscar por Data (dd/MM/yyyy):</label>
                <input type="text" class="form-control" id="dateSearchString" name="dateSearchString" placeholder="Digite a data no formato dd/MM/yyyy">
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
    </p>


    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Status)
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-success">Editar</a> |
                    <a asp-action="Detalhes" asp-route-id="@item.Id" class="btn btn-success">Detalhes</a> |
                    <a asp-action="Deletar" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
                </td>
            </tr>
        }

        </tbody>
    </table>

